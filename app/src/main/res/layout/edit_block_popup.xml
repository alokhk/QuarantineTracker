<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Edit Block"
        android:textColor="#3F7CAC"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextBlockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Block Name"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerBlockDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <NumberPicker
        android:id="@+id/numberPickerNewCapacity"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

    <Spinner
        android:id="@+id/spinnerNewBlockIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp" />
</LinearLayout>